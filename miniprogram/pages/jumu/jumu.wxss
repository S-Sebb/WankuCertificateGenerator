/* 背景图片样式 */
.background-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

/* 自定义导航栏，固定在页面顶部 */
.custom-navigation-bar {
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;  /* 固定位置 */
  top: 100rpx;  /* 固定在顶部 */
  z-index: 1;  /* 确保导航栏在最上层 */
}

.back-icon {
  position: absolute;
  left: 20rpx; /* 固定在左侧 */
  width: 40rpx;
  height: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
}

.container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
  position: relative;
  height: 100vh;
  box-sizing: border-box;
}

.content {
  margin-top: 250rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 按钮样式 */
.button {
  margin-top: -10rpx;
  width: 600rpx; /* 按原始图片宽度 */
  height: 190rpx; /* 按原始图片高度 */
}

/* 按下特效 */
.button-hover {
  opacity: 0.8; /* 按下时使按钮稍微变暗 */
  transform: scale(0.95); /* 按下时按钮缩小一点 */
  transition: all 0.2s ease; /* 平滑过渡效果 */
}

/* 底部Logo样式 */
.logo {
  width: 150rpx;
  height: 150rpx;
  margin-top: 20rpx;
}

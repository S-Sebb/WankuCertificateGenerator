.container {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}

.article {
  flex: 1;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.content {
  font-size: 36rpx;
  line-height: 50rpx;
  margin-bottom: 20rpx;
}

.image-wrapped-content {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  margin-bottom: 40rpx;
}

.wrapped-image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
  float: left;
  border-radius: 10rpx;
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.1);
}

.images {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.test-image {
  width: 100%;
  height: auto;
  border-radius: 10rpx;
  box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.1);
}

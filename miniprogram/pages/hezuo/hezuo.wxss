/* 背景图片样式 */
.background-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.container {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;  /* 确保内容从上到下排列 */
  align-items: center;
  padding: 20rpx;
  position: relative;
  height: 100vh;
  box-sizing: border-box;
}

/* 自定义导航栏，固定在页面顶部 */
.custom-navigation-bar {
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;  /* 固定位置 */
  top: 100rpx;  /* 固定在顶部 */
  z-index: 1;  /* 确保导航栏在最上层 */
}

.back-icon {
  position: absolute;
  left: 20rpx;
  width: 40rpx;
  height: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
}

/* 内容部分 */
.content {
  margin-top: 200rpx;  /* 为了给导航栏留出空间 */
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.image-list {
  margin-top: 200rpx;  /* 为了给导航栏留出空间 */
  display: flex;
  flex-direction: column;
  align-items: center;
}

.page-image {
  width: 750rpx;
}


/* 底部Logo样式，固定在页面底部 */
.logo {
  width: 150rpx;
  height: 150rpx;
  bottom: 40rpx;  /* 距离底部40rpx */
  z-index: 1;  /* 确保Logo在最上层 */
}

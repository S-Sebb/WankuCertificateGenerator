.container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background-color: #ffffff;
}

.centered-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  margin-bottom: 40rpx;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}

.result-image {
  margin-bottom: 40rpx;
  width: 95%;  /* 增加图片宽度 */
}

.result-button {
  margin-top: 20rpx;
  padding: 20rpx;
  width: 600rpx;  /* 增加按钮宽度 */
  font-size: 34rpx;  /* 增加按钮字体大小 */
  background-color: #1aad19;
  color: white;
  border: none;
  border-radius: 10rpx;
}

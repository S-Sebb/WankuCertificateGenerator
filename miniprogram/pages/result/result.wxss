.container {
  display: flex;
  flex-direction: column;
  /* 这两个可能会让子元素上下撑开 */
  justify-content: space-between;
  align-items: center;
  min-height: 100vh;
  background-image: url('https://7761-wanku-1grdi7z2e884c9f1-1330554170.tcb.qcloud.la/images/index_background.png?sign=0b6c03c3781930c793407751a08e0c1e&t=1729113905');
}

.title {
  margin-bottom: 40rpx;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}

.result-image {
  margin-bottom: 40rpx;
  width: 95%;  /* 增加图片宽度 */
}

.result-button {
  margin-top: 20rpx;
  padding: 20rpx;
  width: 600rpx;  /* 增加按钮宽度 */
  font-size: 34rpx;  /* 增加按钮字体大小 */
  background-color: #1aad19;
  color: white;
  border: none;
  border-radius: 10rpx;
}

/* 背景图片样式 */
.background-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.container {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;  /* 确保内容从上到下排列 */
  align-items: center;
  padding: 20rpx;
  position: relative;
  height: 100vh;
  box-sizing: border-box;
}

/* 自定义导航栏，固定在页面顶部 */
.custom-navigation-bar {
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;  /* 固定位置 */
  top: 100rpx;  /* 固定在顶部 */
  z-index: 1;  /* 确保导航栏在最上层 */
}

.back-icon {
  position: absolute;
  left: 20rpx;
  width: 40rpx;
  height: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
}

/* 内容部分 */
.content {
  margin-top: 250rpx;  /* 为了给导航栏留出空间 */
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.button-wrapper {
  margin-bottom: 20rpx;
  width: 90%;
  height: 80rpx;
  background-color: #fff;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.1);
}

.item-text {
  font-size: 34rpx;
  color: #333;
}

/* 按下特效 */
.button-hover {
  opacity: 0.8;
  transform: scale(0.98);
  transition: all 0.2s ease;
}

/* 底部Logo样式，固定在页面底部 */
.logo {
  width: 150rpx;
  height: 150rpx;
  position: absolute;  /* 固定在页面底部 */
  bottom: 40rpx;  /* 距离底部40rpx */
  z-index: 1;  /* 确保Logo在最上层 */
}
